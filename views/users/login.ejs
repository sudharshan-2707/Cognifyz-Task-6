<%- layout('./layouts/boilerplate.ejs')%>
<div class="row mt-3 p-1 p-md-3">
    <div class="col-12 col-md-8 col-lg-6 col-xl-4 mx-auto row">
        <h2 class="col-12 text-dark text-center " style="font-weight: 900;">Log In</h2>
        <div class="text-secondary text-center" style="text-transform: capitalize;">welcome to wanderLust</div>
    <form action="/login" method="post" class="col-12 needs-validation" novalidate >
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" name="username" id="username" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="password" id="password" class="form-control" required>
        </div>
        <button class="btn mt-3 fw-bold btn-primary col-12 d-block mx-auto">Login</button>
        <p class="mt-1  text-center d-block">I Don't have an Account ? <a href="/signup" class="fw-bold">Register</a></p>
    </form>
    </div>
    
</div>