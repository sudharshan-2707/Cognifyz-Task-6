<%- layout("./layouts/boilerplate.ejs") %>
<body>
  <div class="row mt-3 p-1 p-md-3">
    <div class="col-12 col-md-10 col-lg-8 col-xl-6 mx-auto">
      <h2 class="col-12 text-dark text-center" style="font-weight: 700">
        Create a New Listing
      </h2>
      <form
        action="/listings"
        method="post"
        enctype="multipart/form-data"
        novalidate
        class="needs-validation"
      >
        <div class="mb-3">
          <label for="listing_title" class="form-label">Title</label>
          <input
            type="text"
            name="listing[title]"
            id="listing_title"
            placeholder="Enter a Catchy Title"
            class="form-control"
            required
          />
          <div class="valid-feedback">Title looks Good!</div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            id="description"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Please Enter a Short Description</div>
        </div>
        <!-- <div class="mb-2">
          <label for="imge-url" class="form-label">URL</label>
          <input
            type="text"
            class="form-control"
            name="listing[image.url]"
            id=""
            placeholder="Enter Url of Image"
          />
        </div> -->
        <div class="mb-3">
          <label for="image" class="form-label">Image:</label>
          <input
            type="file"
            name="listing[image]"
            id="image"
            class="form-control"
            required
          />
        </div>
        <div class="row" style="margin: 0; padding: 0">
          <div class="mb-3 col-12 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              name="listing[price]"
              id="price"
              placeholder="1200"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Price should be Valid</div>
          </div>
          <div class="mb-3 col-12 col-md-8">
            <label for="countryName" class="form-label">Country</label>
            <input
              type="text"
              name="listing[country]"
              id="countryName"
              placeholder="India"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Country name should be Valid</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="lacation" class="form-label">Location</label>
          <input
            type="text"
            name="listing[location]"
            id="location"
            placeholder="Bhopal,MadhyaPradesh"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Location should be Valid</div>
        </div>
        <div class="mb-3 col-3 mt-3 row">
          <button type="submit" class="btn add-button col-12">Add</button>
        </div>
      </form>
    </div>
  </div>
</body>
